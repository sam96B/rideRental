<form action="/web/settings" method="post">
  <div class="row  rounded bg-light myDIV m-2">
    <div class="col-12 pt-2 mt-2" style="text-align: center">
      <h1>
        SETTINGS
      </h1>
    </div>
    <hr class="shadow mt-3" />
    <div
      class="col-12 mt-5 d-flex flex-column align-items-center flex-md-row justify-content-between"
    >
      <div id="controls" class="w-75 me-md-5">
        <div class="form-floating my-3">
          <input
            type="text"
            class="form-control"
            id=""
            value="{{name}}"
            name="name"
            required
          />
          <label for="floatingPassword">
            Full Name
          </label>
        </div>
        <div class="form-floating my-3">
          <input
            type="tel"
            class="form-control"
            id=""
            value="{{phone}}"
            name="phone"
            pattern="[0-9]{3}-[0-9]{7}"
            placeholder="059-1234567"
          />
          <label for="floatingInput">
            Phone Number as 059-1234567
          </label>
        </div>
        <div class="form-floating my-3">
          <input
            type="password"
            class="form-control"
            id=""
            placeholder="Password"
            name="pwd"
          />
          <label for="floatingPassword">
            Password
          </label>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <div
          class="border-end border-1  me-5 hide"
          style="height: 300px;width:1px;border-color: #c3c4c6;"
        ></div>
        {{! <div class="d-flex flex-column align-items-center">
                    <img src="img/avatar.png" class="rounded-circle " alt="..." width="200px" height="200px">
                    <div class="my-4">
                        <label for="formFileSm" class="form-label">Change Profile Picture</label>
                        <input class="form-control form-control-sm" id="formFileSm" type="file">
                    </div>
    
                </div> }}
      </div>
    </div>
    <div class="col-12 d-flex flex-column align-items-center">
      <hr width="70%" class="mt-3" />
      <button type="submit" class="btn btn-primary my-3" style="width:20%">
        Submit
      </button>
    </div>
  </div>
</form>
<script src="js/app.js" type="text/javascript"></script>